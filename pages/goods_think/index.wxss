.frist_tabs .goods_item {
  display: flex;
  border-bottom: solid 1px lightgray;
}
.frist_tabs .goods_item navigator {
  display: flex;
}
.frist_tabs .goods_item navigator .good_img_wrap {
  flex: 2 ;
  justify-content: center;
  align-items: center;
}
.frist_tabs .goods_item navigator .good_img_wrap image {
  width: 80% ;
}
.frist_tabs .goods_item navigator .good_name_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.frist_tabs .goods_item navigator .good_name_wrap .good_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.frist_tabs .goods_item navigator .good_name_wrap .good_price {
  font-size: 40rpx;
  color: var(--themeColor);
}
